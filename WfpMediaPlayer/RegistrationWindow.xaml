<Window x:Class="WfpMediaPlayer.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Email:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Пароль:" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Подтвердите пароль:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Имя:" Grid.Row="3" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="FirstNameTextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Фамилия:" Grid.Row="4" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <Button Content="Зарегистрироваться" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" Height="35" Click="RegisterButton_Click"/>
    </Grid>
</Window>
