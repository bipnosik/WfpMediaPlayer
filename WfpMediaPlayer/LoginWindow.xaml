<Window x:Class="WfpMediaPlayer.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="400" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#F0F0F0">
        <Border Background="White" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Вход в систему" FontSize="24" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Email" Foreground="#555" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" Width="300" Height="35" Margin="0,0,0,10"/>
                <TextBlock Text="Пароль" Foreground="#555" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordTextBox" Width="300" Height="35" Margin="0,0,0,20"/>
                <Button Content="Войти" Width="300" Height="40" Click="LoginButton_Click" Background="#007ACC" Foreground="White"/>
                <Button Content="Регистрация" Width="300" Height="40" Click="RegisterButton_Click" Background="#28A745" Foreground="White" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>